# configuration for libqed
qed.lib.stem := qed
qed.lib.root := lib/qed/

# use c++17
qed.lib.c++.flags += $($(compiler.c++).std.c++20)

# the autogen files
qed.lib.headers.autogen := version.h.in
# the expansion table
qed.lib.autogen = \
    @MAJOR@|$(qed.major)\
    @MINOR@|$(qed.minor) \
    @MICRO@|$(qed.micro) \
    @REVISION@|$(qed.revision) \


# end of file
